---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Hero from '../components/sections/Hero.tsx';
import WhatWeDo from '../components/sections/WhatWeDo.tsx';
import Benefits from '../components/sections/Benefits.tsx';
import UseCases from '../components/sections/UseCases.tsx';
import Testimonials from '../components/sections/Testimonials.tsx';
import Services from '../components/sections/Services.tsx';
import Process from '../components/sections/Process.tsx';
import CallToAction from '../components/sections/CallToAction.tsx';
import Footer from '../components/sections/Footer.tsx';
import { injectGtag } from '../lib/tracking';
import { t } from '../lib/i18n';

const lang = Astro.url.searchParams.get('lang') ?? 'pt';
if (typeof window !== 'undefined') {
  injectGtag('G-XXXXXXXXXX'); // Substitua pelo seu ID real do Google Analytics
}
---

<DefaultLayout>
  <Header client:load />
  <main>
    <Hero client:load lang={lang} t={t} />
    <WhatWeDo client:load lang={lang} t={t} />
    <Benefits client:load lang={lang} t={t} />
    <UseCases client:load lang={lang} t={t} />
    <Testimonials client:load lang={lang} t={t} />
    <Services client:load lang={lang} t={t} />
    <Process client:load lang={lang} t={t} />
    <CallToAction client:load lang={lang} t={t} />
    <Footer client:load lang={lang} t={t} />
  </main>
</DefaultLayout>
